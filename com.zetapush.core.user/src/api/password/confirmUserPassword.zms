/**
 * Confirm the new user password.
 * Token and password are required, token can be retreived via a call on resetUserPassword macro
 */
macroscript confirmUserPassword(
	@NotNull string password,
	@NotNull string token
) {
	/** Change user password */
	zpServiceSimpleAuth.changePassword({
		password, token
	});
} broadcast { password, token } on channel __selfName
