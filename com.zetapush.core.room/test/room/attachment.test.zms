zms_test test_core_room__attachment {
	zms_test_setup {
		zms_test_user caller = zpRecipeUser::zpServiceSimpleAuth({
			login: 'ghoullier',
			password: 'ghoullier'
		});
		zms_test_user callee = zpRecipeUser::zpServiceSimpleAuth({
			login: 'mmorvan',
			password: 'mmorvan'
		});
		
		var contentType = 'image/png';
		var room = null;
	}

	zms_add_handler(callee, addRoomMessage, (result, errors) => {
		info('addRoomMessage', result, errors);

		assert room.id == result.room.id 'COMPARISON_FAILED';

		zms_test_success;
	});

	zms_add_handler(caller, core_room__onConfirmFileUploadCallback, (result, errors) => {
		info('core_room__onConfirmFileUploadCallback', result, errors);
	});

	zms_add_handler(caller, zpRecipeFile::confirmFileUpload, (result, errors) => {
		info('zpRecipeFile::confirmFileUpload', result, errors);

		/*
		sudo caller call addRoomMessage({
			room: room,
			type: MESSAGE_TYPE_ATTACHMENT,
			value: {
				guid: result.url.guid,
				path: str:join('/', room.metadata.attachments, result.url.guid)
			},
			metadata : {}
		});
		*/
	});

	zms_add_handler(caller, zpRecipeFile::requestFileUpload, (result, errors) => {
		info('zpRecipeFile::requestFileUpload', result, errors);

		zms_test_http_request(result.url, result.httpMethod, { 'Content-Type': contentType }, 'test/room/assets/zetapush-logo.png');
		
		sudo caller call zpRecipeFile::confirmFileUpload({
			guid: result.guid,
			owner: result.owner,
			actions: {},
			metadata: {},
			tags: []
		});
	});

	zms_add_handler(caller, createOneToOneRoom, (result, errors) => {
		info('createOneToOneRoom', result, errors);
		
		room = result.room;

		info(#createOneToOneRoom, room.grants);
		info(#createOneToOneRoom, room.metadata);
		info(result.room.metadata.attachments);

		sudo caller call zpRecipeFile::requestFileUpload({
			contentType: 'image/png',
			folder: result.room.metadata.attachments,
			owner: result.room.owner
		});		
	});

	sudo caller call createOneToOneRoom({
		interlocutor: callee.userKey
	});
}