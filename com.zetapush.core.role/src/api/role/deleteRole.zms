@HasPermission(permission = #deleteRole)
macroscript deleteRole(
	@NotNull string name
) {
	const id = str:hex(str:md5(str:upper(name)));
	/** Delete role based group */
	sudo zpRecipeUtils::GLOBAL_OWNER await zpRecipeGroup::core_group__deleteGroupByService({
		id,
		zpService: zpServiceGroupsRole
	});
} broadcast {
	string id,
	string name
} on channel __selfName
